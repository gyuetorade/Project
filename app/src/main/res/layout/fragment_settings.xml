<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="120dp"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    android:background="@color/orange">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/human"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/human"/>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Profile" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mariocart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mariocart"/>

        <Button
            android:id="@+id/btnOrder"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Order" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pricetag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pricetag"/>

        <Button
            android:id="@+id/btnOffers"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Offers and Promo" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notesnimama"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/notesnimama"/>

        <Button
            android:id="@+id/btnPrivacy"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Privacy Policy" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sheildnipapa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sheildnipapa"/>

        <Button
            android:id="@+id/btnSecurity"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Security" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:paddingTop="150dp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Sign-out--->"/>

</LinearLayout>